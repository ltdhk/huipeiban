.order-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-number {
  font-size: 24rpx;
  color: #999999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 600;
}

.order-status.pending {
  color: #fa8c16;
}

.order-status.processing {
  color: #1890ff;
}

.order-status.completed {
  color: #52c41a;
}

.order-status.cancelled {
  color: #999999;
}

.order-content {
  display: flex;
  margin-bottom: 16rpx;
}

.service-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.service-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.service-time {
  font-size: 24rpx;
  color: #666666;
}

.service-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #f5222d;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  color: #666666;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  border: none;
}

.action-btn.primary {
  color: #ffffff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.action-btn::after {
  border: none;
}
