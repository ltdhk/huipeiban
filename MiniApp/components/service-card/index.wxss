.service-card {
  display: flex;
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 16rpx;
}

.service-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.service-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.service-tags {
  margin-bottom: 12rpx;
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  margin-right: 8rpx;
  font-size: 22rpx;
  color: #667eea;
  background-color: rgba(102, 126, 234, 0.1);
  border-radius: 4rpx;
}

.service-stats {
  display: flex;
  gap: 24rpx;
  font-size: 22rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.service-price {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 36rpx;
  font-weight: 600;
  color: #f5222d;
}

.price-unit {
  font-size: 22rpx;
  color: #999999;
  margin-left: 4rpx;
}
