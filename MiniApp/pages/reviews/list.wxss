/* MiniApp/pages/reviews/list.wxss */
.reviews-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
}

.loading,
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

.review-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.rating-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.stars {
  display: flex;
}

.star {
  font-size: 32rpx;
  color: #ddd;
}

.star.active {
  color: #ffd700;
}

.rating-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.delete-btn {
  font-size: 26rpx;
  color: #f5222d;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background-color: rgba(245, 34, 45, 0.1);
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 24rpx;
  color: #667eea;
  background-color: rgba(102, 126, 234, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
}

.images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.images .image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}

.order-info {
  font-size: 26rpx;
  color: #666;
}

.order-label {
  color: #999;
}

.order-value {
  color: #666;
}

.time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.reply {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.reply-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #667eea;
}

.reply-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.reply-time {
  font-size: 22rpx;
  color: #999;
  text-align: right;
}

.loading-more,
.no-more {
  text-align: center;
  padding: 32rpx 0;
  font-size: 26rpx;
  color: #999;
}
