<view class="institutions-container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input class="search-input" placeholder="搜索陪诊机构..." bindinput="onSearchInput" value="{{searchText}}" />
  </view>

  <!-- 机构列表 -->
  <scroll-view class="institution-list" scroll-y bindscrolltolower="loadMore">
    <view class="institution-item" wx:for="{{institutions}}" wx:key="id" data-id="{{item.id}}" bindtap="goToDetail">
      <image class="logo" src="{{item.logo}}" mode="aspectFill"></image>
      <view class="info">
        <view class="name-row">
          <text class="name">{{item.name}}</text>
          <view class="verified" wx:if="{{item.verified}}">
            <text class="verified-text">已认证</text>
          </view>
        </view>
        <text class="description">{{item.description}}</text>
        <view class="meta">
          <text class="meta-item">⭐ {{item.rating}}</text>
          <text class="meta-item">服务 {{item.serviceCount}} 项</text>
          <text class="meta-item">{{item.address}}</text>
        </view>
      </view>
    </view>

    <view class="loading" wx:if="{{loading}}">加载中...</view>
    <view class="no-more" wx:if="{{noMore}}">没有更多了</view>
  </scroll-view>
</view>
