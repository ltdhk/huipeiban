/* 首页样式 - 侧边抽屉导航 */

.home-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
  overflow: hidden;
}

/* 顶部导航栏 */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
  background: #FFFFFF;
  position: relative;
  z-index: 100;
}

.menu-btn,
.user-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-btn .icon,
.user-btn .icon {
  width: 44rpx;
  height: 44rpx;
}

.app-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
}

/* 聊天内容区 */
.chat-content {
  flex: 1;
  padding: 24rpx 24rpx 220rpx;
  overflow-y: auto;
  box-sizing: border-box;
}

/* 欢迎引导 */
.welcome-section {
  min-height: calc(100vh - 200rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.welcome-text {
  text-align: center;
  margin-bottom: 80rpx;
}

.welcome-title,
.welcome-subtitle {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 68rpx;
}

.welcome-subtitle {
  margin-top: 12rpx;
  font-size: 44rpx;
}

/* 快捷预约按钮 */
.quick-booking-actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.booking-btn {
  background: linear-gradient(135deg, #E8EEFF 0%, #F0E6FF 100%);
  border-radius: 24rpx;
  padding: 32rpx 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.15);
  transition: all 0.3s;
  border: 1rpx solid #E0D5FF;
}

.booking-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.15);
  background: linear-gradient(135deg, #E0D7FF 0%, #E8DEFF 100%);
}

.booking-btn text {
  font-size: 32rpx;
  color: #5B4BAD;
  font-weight: 500;
  line-height: 48rpx;
}

/* 聊天消息 */
.message-group {
  margin-bottom: 32rpx;
}

.message-item {
  display: flex;
  margin-bottom: 24rpx;
}

/* AI消息 */
.ai-message {
  flex-direction: column;
  align-items: flex-start;
}

.message-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.ai-avatar {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
}

.sender-name {
  font-size: 28rpx;
  color: #909399;
}

.message-content {
  max-width: 100%;
}

.message-bubble {
  padding: 24rpx 28rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  line-height: 44rpx;
  word-wrap: break-word;
}

.ai-bubble {
  background: #F5F7FA;
  color: #303133;
  border-radius: 8rpx 16rpx 16rpx 16rpx;
  max-width: 480rpx;
}

/* 用户消息 */
.user-message {
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-start;
  padding-right: 4rpx;
}

.sender-label {
  font-size: 28rpx;
  color: #909399;
  margin-right: 12rpx;
  margin-top: 8rpx;
}

.user-bubble {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
  border-radius: 16rpx 8rpx 16rpx 16rpx;
  max-width: 480rpx;
}

.user-avatar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-left: 12rpx;
}

.message-text {
  display: block;
}

/* 推荐卡片 */
.recommendations {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  max-width: 100%;
}

.rec-card {
  display: flex;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #EBEEF5;
  transition: all 0.3s;
  max-width: 100%;
  box-sizing: border-box;
}

.rec-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.rec-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.rec-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.rec-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.rec-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
}

.rec-rating {
  display: flex;
  align-items: center;
}

.rating-text {
  font-size: 28rpx;
  color: #F59E0B;
  margin-left: 4rpx;
}

.rec-desc {
  font-size: 26rpx;
  color: #606266;
  line-height: 38rpx;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.rec-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.tag {
  font-size: 24rpx;
  color: #667EEA;
  background: #E8EEFF;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

/* 加载动画 */
.typing {
  padding: 20rpx 28rpx;
}

.typing-dots {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #909399;
  border-radius: 50%;
  animation: typing 1.4s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.6;
  }
  30% {
    transform: translateY(-10rpx);
    opacity: 1;
  }
}

/* 输入区域 */
.input-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-top: 1rpx solid #EBEEF5;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.input-container {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.voice-btn {
  width: 80rpx;
  height: 80rpx;
  padding: 0;
  margin-right: 16rpx;
  background: #FFFFFF;
  border: 1rpx solid #DCDFE6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-btn .icon {
  width: 40rpx;
  height: 40rpx;
}

.text-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  background: #F5F7FA;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #303133;
}

.send-btn {
  width: 80rpx;
  height: 80rpx;
  padding: 0;
  margin-left: 16rpx;
  background: #DCDFE6;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.send-btn.active {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
}

.send-btn .icon {
  width: 32rpx;
  height: 32rpx;
}

.send-btn[disabled] {
  opacity: 0.6;
}

/* 侧边抽屉导航 */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0);
  z-index: 200;
  pointer-events: none;
  transition: all 0.3s;
}

.drawer-mask.visible {
  background: rgba(0, 0, 0, 0.5);
  pointer-events: auto;
}

.drawer-container {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 560rpx;
  background: #FFFFFF;
  z-index: 300;
  transform: translateX(-100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
}

.drawer-container.open {
  transform: translateX(0);
}

/* 抽屉头部 */
.drawer-header {
  display: flex;
  align-items: center;
  padding: 48rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
}

.app-icon {
  width: 96rpx;
  height: 96rpx;
  margin-right: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.app-icon .icon {
  width: 64rpx;
  height: 64rpx;
}

.app-info {
  display: flex;
  flex-direction: column;
}

.app-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 导航菜单 */
.drawer-menu {
  flex: 1;
  padding: 16rpx 0;
  overflow-y: auto;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 32rpx;
  transition: all 0.2s;
  position: relative;
}

.menu-item:active {
  background: #F5F7FA;
}

.menu-item.active {
  background: #EEF2FF;
}

.menu-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-radius: 0 6rpx 6rpx 0;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  font-size: 32rpx;
  color: #303133;
  font-weight: 500;
}

.menu-item.active .menu-text {
  color: #667EEA;
}

/* 抽屉底部 */
.drawer-footer {
  padding: 32rpx;
  border-top: 1rpx solid #EBEEF5;
}

.logout-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx;
  background: #F5F7FA;
  border-radius: 16rpx;
  transition: all 0.2s;
}

.logout-btn:active {
  background: #E8ECEF;
}

.logout-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.logout-text {
  font-size: 30rpx;
  color: #606266;
  font-weight: 500;
}
