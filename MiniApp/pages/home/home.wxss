/* MiniApp/pages/home/home.wxss */
.home-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 360rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 快捷入口 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 24rpx;
  background-color: #ffffff;
  margin-top: 16rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.ai-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.companion-icon {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.institution-icon {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.order-icon {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.action-text {
  font-size: 24rpx;
  color: #333333;
}

/* 区块 */
.section {
  margin-top: 16rpx;
  padding: 32rpx 24rpx;
  background-color: #ffffff;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.section-more {
  font-size: 24rpx;
  color: #999999;
}

/* 陪诊师卡片 */
.companions-scroll {
  white-space: nowrap;
}

.companion-card {
  display: inline-block;
  width: 200rpx;
  margin-right: 24rpx;
  padding: 24rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  text-align: center;
}

.companion-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.companion-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.companion-tags {
  margin-bottom: 8rpx;
}

.tag {
  display: inline-block;
  padding: 4rpx 8rpx;
  font-size: 20rpx;
  color: #667eea;
  background-color: rgba(102, 126, 234, 0.1);
  border-radius: 4rpx;
  margin: 2rpx;
}

.companion-stats {
  display: flex;
  justify-content: space-around;
  font-size: 22rpx;
  color: #666666;
}

/* 机构卡片 */
.institution-list {
  display: flex;
  flex-direction: column;
}

.institution-card {
  display: flex;
  padding: 24rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.institution-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.institution-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.institution-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.institution-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.institution-meta {
  display: flex;
  gap: 24rpx;
  font-size: 22rpx;
  color: #999999;
}
