<view class="home-container">
  <!-- 顶部轮播图 -->
  <swiper class="banner-swiper" indicator-dots autoplay interval="5000" circular>
    <swiper-item wx:for="{{banners}}" wx:key="id">
      <image class="banner-image" src="{{item.image}}" mode="aspectFill"></image>
    </swiper-item>
  </swiper>

  <!-- 快捷入口 -->
  <view class="quick-actions">
    <view class="action-item" bindtap="goToAIChat">
      <view class="action-icon ai-icon"></view>
      <text class="action-text">AI陪诊</text>
    </view>
    <view class="action-item" bindtap="goToCompanions">
      <view class="action-icon companion-icon"></view>
      <text class="action-text">找陪诊师</text>
    </view>
    <view class="action-item" bindtap="goToInstitutions">
      <view class="action-icon institution-icon"></view>
      <text class="action-text">找机构</text>
    </view>
    <view class="action-item" bindtap="goToOrders">
      <view class="action-icon order-icon"></view>
      <text class="action-text">我的订单</text>
    </view>
  </view>

  <!-- 推荐陪诊师 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">优质陪诊师</text>
      <text class="section-more" bindtap="goToCompanions">查看更多 ></text>
    </view>
    <scroll-view class="companions-scroll" scroll-x>
      <view class="companion-card" wx:for="{{companions}}" wx:key="id" data-id="{{item.id}}" bindtap="goToCompanionDetail">
        <image class="companion-avatar" src="{{item.avatar}}" mode="aspectFill"></image>
        <text class="companion-name">{{item.name}}</text>
        <view class="companion-tags">
          <text class="tag" wx:for="{{item.tags}}" wx:for-item="tag" wx:key="*this">{{tag}}</text>
        </view>
        <view class="companion-stats">
          <text class="stat">⭐ {{item.rating}}</text>
          <text class="stat">{{item.orderCount}}单</text>
        </view>
      </view>
    </scroll-view>
  </view>

  <!-- 推荐机构 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">优质机构</text>
      <text class="section-more" bindtap="goToInstitutions">查看更多 ></text>
    </view>
    <view class="institution-list">
      <view class="institution-card" wx:for="{{institutions}}" wx:key="id" data-id="{{item.id}}" bindtap="goToInstitutionDetail">
        <image class="institution-logo" src="{{item.logo}}" mode="aspectFill"></image>
        <view class="institution-info">
          <text class="institution-name">{{item.name}}</text>
          <text class="institution-desc">{{item.description}}</text>
          <view class="institution-meta">
            <text class="meta-item">⭐ {{item.rating}}</text>
            <text class="meta-item">服务 {{item.serviceCount}} 项</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
