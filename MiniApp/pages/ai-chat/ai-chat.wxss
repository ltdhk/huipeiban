/* MiniApp/pages/ai-chat/ai-chat.wxss */
.ai-chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.chat-header {
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  text-align: center;
  display: block;
}

.chat-messages {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.message-item {
  display: flex;
  margin-bottom: 24rpx;
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-item.user {
  justify-content: flex-end;
}

.message-item.assistant {
  justify-content: flex-start;
}

.message-bubble {
  max-width: 520rpx;
  padding: 24rpx 28rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.message-item.user .message-bubble {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-bottom-right-radius: 4rpx;
}

.message-item.assistant .message-bubble {
  background-color: #ffffff;
  border-bottom-left-radius: 4rpx;
}

.message-text {
  font-size: 30rpx;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-word;
}

.message-item.user .message-text {
  color: #ffffff;
}

.message-item.assistant .message-text {
  color: #333333;
}

.chat-input {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-box {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  border: none;
}

.send-btn {
  margin-left: 16rpx;
  padding: 0 32rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #ffffff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 36rpx;
  border: none;
}

.send-btn::after {
  border: none;
}
