/* MiniApp/pages/messages/chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.chat-messages {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.loading-history {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 26rpx;
}

.message-item {
  margin-bottom: 32rpx;
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-wrapper {
  display: flex;
  align-items: flex-start;
}

.user-message .message-wrapper {
  justify-content: flex-end;
}

.other-message .message-wrapper {
  justify-content: flex-start;
}

.message-bubble {
  max-width: 500rpx;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  word-wrap: break-word;
}

.user-message .message-bubble {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-bottom-right-radius: 4rpx;
}

.other-message .message-bubble {
  background: #ffffff;
  color: #333333;
  border-bottom-left-radius: 4rpx;
  border: 1rpx solid #e8eaed;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-wrap;
  display: block;
}

.message-time {
  text-align: center;
  margin-top: 8rpx;
}

.user-message .message-time {
  text-align: right;
}

.other-message .message-time {
  text-align: left;
}

.message-time text {
  font-size: 22rpx;
  color: #999;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

.chat-input {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-top: 1rpx solid #e8eaed;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.input-box {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid transparent;
  transition: all 0.3s ease;
}

.input-box:focus {
  background: #ffffff;
  border-color: #667eea;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  margin-left: 16rpx;
  background: #e0e0e0;
  color: #999;
  border-radius: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s ease;
}

.send-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.send-btn.active:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.send-btn::after {
  border: none;
}

.send-btn[disabled] {
  background: #e0e0e0;
  color: #ccc;
}

/* 语音输入按钮 */
.voice-btn {
  width: 72rpx;
  height: 72rpx;
  margin-left: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.voice-btn.recording {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 2rpx 8rpx rgba(245, 87, 108, 0.3);
  }
  50% {
    transform: scale(1.1);
    box-shadow: 0 4rpx 16rpx rgba(245, 87, 108, 0.5);
  }
}

.voice-btn .iconfont {
  font-size: 40rpx;
  color: #ffffff;
}

/* 语音识别蒙层 */
.voice-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.2s ease-in;
}

.voice-modal {
  width: 560rpx;
  padding: 48rpx;
  background: #ffffff;
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.voice-icon {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

.voice-icon .iconfont {
  font-size: 80rpx;
  color: #ffffff;
}

.voice-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.recognized-text {
  max-width: 100%;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  word-wrap: break-word;
  line-height: 1.6;
}

.voice-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}