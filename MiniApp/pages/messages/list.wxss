/* MiniApp/pages/messages/list.wxss */
.messages-container {
  height: 100vh;
  background-color: #f5f5f5;
}

.message-list {
  height: 100%;
}

.message-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.time {
  font-size: 22rpx;
  color: #999999;
}

.last-message {
  font-size: 26rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.badge {
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 8rpx;
  background-color: #f5222d;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge-text {
  font-size: 20rpx;
  color: #ffffff;
}

.empty {
  text-align: center;
  padding: 120rpx 0;
  color: #999999;
}
