/* 样式与 patients/index.wxss 类似 */
.addresses-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 160rpx;
}

.loading, .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

.address-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.address-name {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.default-badge {
  font-size: 22rpx;
  color: #667eea;
  background-color: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.card-actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.action-btn.edit {
  color: #667eea;
  background-color: rgba(102, 126, 234, 0.1);
}

.action-btn.delete {
  color: #f5222d;
  background-color: rgba(245, 34, 45, 0.1);
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-row {
  display: flex;
  font-size: 28rpx;
}

.label {
  color: #999;
  width: 100rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  flex: 1;
}

.card-footer {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.set-default-btn {
  width: 100%;
  font-size: 28rpx;
  color: #667eea;
  background-color: rgba(102, 126, 234, 0.05);
  border: 1rpx solid #667eea;
  border-radius: 12rpx;
  padding: 16rpx 0;
}

.set-default-btn::after {
  border: none;
}

.add-btn-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.add-btn {
  width: 100%;
  font-size: 30rpx;
  color: #ffffff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 28rpx 0;
  border: none;
}

.add-btn::after {
  border: none;
}
