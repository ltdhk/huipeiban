<view class="profile-container">
  <!-- 用户信息 -->
  <view class="user-section">
    <image class="avatar" src="{{userInfo.avatar}}" mode="aspectFill"></image>
    <view class="user-info">
      <text class="nickname">{{userInfo.nickname || '点击登录'}}</text>
      <text class="phone" wx:if="{{userInfo.phone}}">{{userInfo.phone}}</text>
    </view>
  </view>

  <!-- 就诊人管理 -->
  <view class="section">
    <view class="section-title">就诊人管理</view>
    <view class="menu-item" bindtap="goToPatients">
      <text class="menu-text">就诊人信息</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToAddresses">
      <text class="menu-text">地址管理</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <!-- 我的服务 -->
  <view class="section">
    <view class="section-title">我的服务</view>
    <view class="menu-item" bindtap="goToOrders">
      <text class="menu-text">我的订单</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToCoupons">
      <text class="menu-text">优惠券</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToFavorites">
      <text class="menu-text">我的收藏</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <!-- 设置 -->
  <view class="section">
    <view class="section-title">设置</view>
    <view class="menu-item" bindtap="goToSettings">
      <text class="menu-text">账号设置</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToAbout">
      <text class="menu-text">关于我们</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <button class="logout-btn" wx:if="{{userInfo.id}}" bindtap="handleLogout">退出登录</button>
</view>
