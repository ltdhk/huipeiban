/* MiniApp/pages/profile/patients/edit.wxss */
.edit-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.form {
  background-color: #ffffff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 0 32rpx;
}

.form-item {
  display: flex;
  align-items: flex-start;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.required .label::before {
  content: '*';
  color: #f5222d;
  margin-right: 4rpx;
}

.label {
  width: 200rpx;
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
  padding-top: 8rpx;
}

.input,
.picker {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.input {
  padding: 8rpx 0;
}

.picker {
  padding: 8rpx 0;
  color: #666;
}

.textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  min-height: 120rpx;
  padding: 8rpx 0;
}

.switch-item {
  justify-content: space-between;
  align-items: center;
}

.submit-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.submit-btn {
  width: 100%;
  font-size: 30rpx;
  color: #ffffff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 28rpx 0;
  border: none;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  opacity: 0.6;
}
